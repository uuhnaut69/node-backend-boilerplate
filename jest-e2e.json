{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "tests/e2e",
  "testRegex": ".*\\.e2e-spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": ["**/*.(t|j)s"],
  "coverageDirectory": "../coverage",
  "testEnvironment": "node",
  "moduleNameMapper": {
    "^@/(.*)$": "<rootDir>/../../src/$1",
    "^src/(.*)$": "<rootDir>/../../src/$1"
  },
  "moduleDirectories": ["node_modules", "<rootDir>/../../"],
  "setupFiles": ["<rootDir>/../../jest.setup.ts"]
}
